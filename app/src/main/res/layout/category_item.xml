<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="@dimen/sp_16"
    android:layout_marginLeft="@dimen/sp_16"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/hotpage_sentences_bg">

    <ImageView
        android:id="@+id/category_item_img"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/category_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/category_item_img"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:lines="1"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"/>

    <TextView
        android:id="@+id/category_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/category_item_img"
        android:layout_below="@id/category_item_title"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="@color/yellow_dark"
        android:lines="1"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"/>

    <TextView
        android:id="@+id/category_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/category_item_img"
        android:layout_below="@id/category_item_author"
        android:layout_marginTop="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="@dimen/dp_4"
        android:textSize="12sp"
        android:lines="4"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"/>

</RelativeLayout>